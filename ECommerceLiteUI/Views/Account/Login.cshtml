@using ECommerceLiteUI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    <!--Login Start-->
    <div class="col-md-6 col-md-offset-3 col-md-offset-3">

        @if (ViewBag.Result != null)
        {
            <h4 class="text-center text-danger">@ViewBag.Result</h4>
        }




        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <!-- Herhangi bir  hata alındığında , email olabilir tc olabilir.Bu hataların toplam hataları ekranın üstünde yazar.Öbür türlü
        Html.ValidationMessage şeklinde labellerin altına yazıyorduk.Buda sadece o kısımla ilgili hataları ekrana yazdırmaya sağlıyor -->

            @Html.ValidationSummary()
            <div class="login-header margin-bottom-30" align="center">
                <h2 class="text-center">ECommerceLite 303'e HOŞGELDİNİZ!</h2>

            </div>
            <br />
            if (TempData["PasswordUpdated"] != null)
            {
                <h4 class="text-center" text-success>@TempData["PasswordUpdated"]</h4>
            }
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon">
                    <i class="fa fa-user"></i>
                </span>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Emailinizi giriniz..." })

                <!--  Controller da yaptığımız isvalid kısmında hata alırsa uymazsa yani buraya gelir-->
                <!--  Html.ValidationMessageFor(x => x.Email)-->

            </div>
            <br />
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon">
                    <i class="fa fa-lock"></i>
                </span>
                @Html.TextBoxFor(x => x.Password, new
           {

               @class = "form-control",
               placeholder = "Şifrenizi giriniz...",
                    type = "password"
           })

                <!--Controller da yaptığımız isvalid kısmında hata alırsa uymazsa yani buraya gelir-->
                <!--  Html.ValidationMessageFor(x => x.Password)-->

            </div>
            <br />
            <div class="input-checkbox">
                <input type="checkbox" id="rememberme" name="@Model.RememberMe" />
                <label for="rememberme">
                    <span></span>
                    Beni Hatırla?
                </label>

            </div>
            <br />

            <div class="row">
                <button type="submit" class="btn btn-default pull-right" style="background-color:#D10024;color:white;">Giriş Yap</button>
                <a href="/Account/Register" class="btn btn-default pull-left" style="background-color: white; color: #D10024;">Kayıt Ol</a>
            </div>

            <hr />
            <h4 align="center">Şifrenizi mi unuttunuz?</h4>
            <p align="center">
                @Html.ActionLink("Yeni Şifre Talebi İçin BURAYA Tıklayınız",
                "RecoverPassword", "Account")
            </p>
        }

    </div>
    <!--Login End-->

</div>