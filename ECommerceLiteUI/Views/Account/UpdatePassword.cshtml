@using ECommerceLiteUI.Models
@model ProfileViewModel
@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-md-offset-3">

            @using (Html.BeginForm("UpdatePassword", "Account",
                FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="login-header margin-bottom-30">
                    <h2 class="text-center">
                        Şifrenizi yenileyebilirsiniz...

                    </h2>

                </div>
                <br />

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon addon">
                        <i class="fa fa-lock"></i>
                    </span>

                    @Html.TextBoxFor(x => x.Password, new
                    {
                        @class = "form-control",
                        placeholder = "Mevcut şifrenizi giriniz...",
               type = "password"
               })

                    @Html.ValidationMessageFor(x => x.Password)
                </div>


                <br />

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon addon">
                        <i class="fa fa-lock"></i>
                    </span>

                    @Html.TextBoxFor(x => x.NewPassword, new
                    {
                        @class = "form-control",
                        placeholder = "Yeni şifrenizi giriniz...",
               type = "password"
               })

                    @Html.ValidationMessageFor(x => x.NewPassword)
                </div>
                <br />

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon addon">
                        <i class="fa fa-lock"></i>
                    </span>

                    @Html.TextBoxFor(x => x.ConfirmPassword, new
                    {
                        @class = "form-control",
                        placeholder = "Yeni şifrenizi tekrar giriniz...",
               type = "password"
               })

                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
                <br />

                <div class="row">
                    <div class="cold-md-12">
                        <button type="submit"
                                class="btn btn-default"
                                style="background-color:#d10024; color: white">
                            Şifreyi Değiştir

                        </button>

                    </div>

                </div>
            }




        </div>
    </div>


</div>

